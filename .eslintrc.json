{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-use-before-define": 0,
        "no-plusplus": 0,
        "semi": "off",
        "comma-dangle": "error",
        "no-underscore-dangle": "off",
        
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"],
        
        "no-undef": [2, { "typeof": true }],
        "prefer-rest-params": "off"
    }
}
